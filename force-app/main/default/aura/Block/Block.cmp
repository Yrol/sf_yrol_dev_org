<aura:component>
    <aura:attribute name="label" type="String"></aura:attribute>
    <aura:attribute name="open" type="Boolean" default="false"></aura:attribute>

    <div class="board-block slds-align--absolute-center slds-var-p-around_medium" onclick="{!c.blockClickHandler}">
        <aura:if isTrue="{!v.open}">
            <div>{!v.label}</div>
        </aura:if>
    </div>
</aura:component>
